{
  "name": "express-react",
  "version": "1.0.2",
  "main": "./start.js",
  "author": "CodingDaria",
  "homepage": "https://github.com/CodingDaria/express-react-boilerplate#readme",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "server": "nodemon start.js",
    "client": "webpack-dev-server --mode development --config webpack.dev.config.js",
    "buildDev": "rm -rf dist && webpack --mode development --config webpack.dev.config.js --progress",
    "buildProd": "rm -rf dist && webpack --node-env production --config webpack.prod.config.js --progress",
    "start": "cross-env NODE_ENV=production && node start.js",
    "dev": "yarn run server & yarn run client",
    "prettier": "prettier ./src/**/**.js ./server/**/**.js --write",
    "lint": "eslint --ext .js src server",
    "heroku-postbuild": "yarn run buildProd"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|sass|less)$": "<rootDir>/__mocks__/styleMock.js",
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/fileMock.js"
    }
  },
  "dependencies": {
    "@babel/core": "^7.12.10",
    "@babel/eslint-parser": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "@babel/preset-react": "^7.12.10",
    "@babel/register": "^7.13.16",
    "@babel/runtime": "^7.12.5",
    "axios": "0.21.1",
    "connected-react-router": "^6.8.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "history": "^5.0.0",
    "node-sass": "^6.0.0",
    "nodemon": "^2.0.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "redux-persist": "^6.0.0",
    "redux-thunk": "^2.3.0",
    "sass": "^1.30.0",
    "serve-favicon": "^2.5.0",
    "styled-components": "^5.3.0",
    "tailwindcss": "^2.0.2"
  },
  "devDependencies": {
    "@wojtekmaj/enzyme-adapter-react-17": "^0.3.2",
    "autoprefixer": "^10.1.0",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^8.1.1",
    "css-loader": "^5.0.1",
    "enzyme": "^3.11.0",
    "eslint": "^7.15.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-webpack-plugin": "^2.5.4",
    "file-loader": "^6.2.0",
    "html-loader": "^1.3.2",
    "husky": ">=6",
    "jest": "^26.6.3",
    "lint-staged": ">=10",
    "mini-css-extract-plugin": "^1.6.0",
    "postcss": "^8.3.0",
    "postcss-import": "^14.0.0",
    "postcss-loader": "^4.1.0",
    "postcss-nested": "^5.0.3",
    "postcss-preset-env": "^6.7.0",
    "prettier": "2.2.1",
    "process": "^0.11.10",
    "sass-loader": "^10.1.0",
    "uglifyjs-webpack-plugin": "1.3.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.10.1",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "nodemonConfig": {
    "ignore": [
      "src"
    ]
  },
  "lint-staged": {
    "{src,server}/**/*.{js,jsx}": "eslint --fix --max-warnings=20"
  }
}
